useDynLib(orcv,
	C_start,
	C_next_message,
	C_receive_socket,
	C_send_socket,
	C_get_socket,
	C_close_socket,
	C_location
)
export(
	start,
	receive,
	send,
	location,
	header,
	payload,
	fd,
	address,
	port,
	as.Location
)

S3method(header, Message)
S3method(payload, Message)
S3method(location, Message)
S3method(fd, Message)
S3method(close, Message)

S3method(send, FD)
S3method(receive, FD)
S3method(close, FD)

S3method(send, Location)
S3method(address, Location)
S3method(port, Location)
